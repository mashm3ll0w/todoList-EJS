<%- include("header") -%>

<div class="box" id="heading">
	<h1><%= dayToday %></h1>
</div>

<div class="box">
	<% newListItems.forEach(function(newListItem){ %>
	<div class="item">
		<input type="checkbox" />
		<p><%= newListItem %></p>
	</div>

	<% }); %>
	<form class="item" action="/" method="POST">
		<input type="text" name="newItem" placeholder="New Item" autocapitalize="on" autocomplete="off" />
		<button type="submit" name="button">+</button>
	</form>
</div>

<%- include("footer") -%>
